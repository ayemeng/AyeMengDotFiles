######################################################################
#		      AyeMeng's custom .zshrc 
######################################################################

#---------------------------------------------------------------------
# Functions
#---------------------------------------------------------------------
autoload -U compinit
compinit
autoload -U promptinit
promptinit

#---------------------------------------------------------------------
# Environment
#---------------------------------------------------------------------
setopt ALL_EXPORT
EDITOR='mvim'
HISTFILE="$HOME/.history"
HISTSIZE=2000
RPROMPT="%F{blue}%@%f"
SAVEHIST=$HISTSIZE
unsetopt ALL_EXPORT

#---------------------------------------------------------------------
# Enable options (see man zshoptions)
#---------------------------------------------------------------------
setopt AUTOCD
setopt AUTO_PUSHD
setopt CORRECTALL
setopt EXTENDEDGLOB
setopt HIST_IGNORE_SPACE
setopt INC_APPEND_HISTORY 
setopt SHARE_HISTORY
setopt typesetsilent


#--------------------------------------------------------------------
# Styles
#---------------------------------------------------------------------
zstyle ':completion:*:descriptions' format '%U%B%d%b%u'
zstyle ':completion:*:warnings' format '%BSorry, no matches for: %d%b'

#---------------------------------------------------------------------
# Alias
#---------------------------------------------------------------------
alias c='clear'
alias f='find'
alias l='ls -lGhF'
alias ll='ls -alGhF'
alias ws='pushd ~/Workspace'
alias x='exit'


. /opt/boxen/homebrew/Cellar/python/2.7.3-boxen2/Frameworks/Python.framework/Versions/2.7/lib/python2.7/site-packages/powerline/bindings/zsh/powerline.zsh

# loads powerline for prompt
[ -f /opt/boxen/env.sh ] && source /opt/boxen/env.sh

#---------------------------------------------------------------------
# Keymap overrides
#---------------------------------------------------------------------
bindkey -v
bindkey -M viins ‘jj’ vi-cmd-mode
bindkey -M viins '^r' history-incremental-search-backward
bindkey -M vicmd '^r' history-incremental-search-backward
