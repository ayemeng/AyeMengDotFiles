######################################################################
#		      AyeMeng's custom .zshrc 
######################################################################

#---------------------------------------------------------------------
# Functions
#---------------------------------------------------------------------
autoload -U compinit
compinit
autoload -U promptinit
promptinit

#---------------------------------------------------------------------
# Environment
#---------------------------------------------------------------------
setopt ALL_EXPORT
EDITOR='vim'
HISTFILE="$HOME/.history"
HISTSIZE=2000
RPROMPT="%F{blue}%@%f"
SAVEHIST=$HISTSIZE
if [ "`uname -s`" = "Darwin" ]
then
	GVIM='mvim'
elif [ "`uname -s`" = "Linux" ]
then
	GVIM='gvim'
else
	GVIM='vim'
fi
unsetopt ALL_EXPORT

#---------------------------------------------------------------------
# Enable options (see man zshoptions)
#---------------------------------------------------------------------
setopt AUTOCD
setopt AUTO_PUSHD
setopt CORRECTALL
setopt EXTENDEDGLOB
setopt HIST_IGNORE_SPACE
setopt INC_APPEND_HISTORY 
setopt SHARE_HISTORY

#--------------------------------------------------------------------
# Styles
#---------------------------------------------------------------------
zstyle ':completion:*:descriptions' format '%U%B%d%b%u'
zstyle ':completion:*:warnings' format '%BSorry, no matches for: %d%b'

#---------------------------------------------------------------------
# Alias
#---------------------------------------------------------------------
alias c='clear'
alias ga='git add'
alias gc='git commit'
alias gf='git pull'
alias gp='git push'
alias l='ls -lGhF'
alias ll='ls -al'
alias r='vim -M'
alias x='exit'

